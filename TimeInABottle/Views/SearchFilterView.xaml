<Window x:Class="TimeInABottle.Views.SearchFilterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Filter" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Title -->
        <TextBlock Text="Task Search" FontSize="24" HorizontalAlignment="Center" Margin="10" />

        <!-- Search Box -->
        <TextBox Name="SearchTextBox" Width="300" Margin="10,50,10,0" 
                 HorizontalAlignment="Center" VerticalAlignment="Top"
                 PlaceholderText="Enter a keyword..." />

        <!-- Date Pickers -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,100,0,0">
            <DatePicker Name="StartDatePicker" Margin="10" Width="150"
                        ToolTip="Select start date" />
            <DatePicker Name="EndDatePicker" Margin="10" Width="150"
                        ToolTip="Select end date" />
        </StackPanel>

        <!-- Search Button -->
        <Button Content="Search" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Margin="10" Click="SearchButton_Click" />
    </Grid>
</Window>
