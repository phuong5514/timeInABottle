<Window x:Class="TimeInABottle.Views.SearchFilterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bộ lọc tìm kiếm" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Tìm kiếm công việc" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
        <TextBox Name="SearchTextBox" Width="300" Margin="10" PlaceholderText="Nhập từ khóa..."/>
        <DatePicker Name="StartDatePicker" Margin="10,50,10,0" HorizontalAlignment="Left"/>
        <DatePicker Name="EndDatePicker" Margin="120,50,10,0" HorizontalAlignment="Left"/>
        <Button Content="Tìm kiếm" Width="80" Height="30" HorizontalAlignment="Right" Margin="10" Click="SearchButton_Click"/>
    </Grid>
</Window>
