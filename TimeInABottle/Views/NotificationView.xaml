<Window x:Class="TimeInABottle.Views.NotificationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notifications" Height="300" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Notifications" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
        <ListBox Name="NotificationList" Margin="10,50,10,50"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Mark as Read" Width="120" Height="30" Margin="5" Click="MarkAsReadButton_Click"/>
            <Button Content="Close" Width="80" Height="30" Margin="5" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
