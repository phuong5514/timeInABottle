<Window x:Class="TimeInABottle.Views.TaskListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh sách công việc" Height="400" Width="600">
    <Grid>
        <TextBlock Text="Danh sách công việc" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
        <ListBox Name="TaskList" Margin="10,50,10,10"/>
        <ComboBox Name="SortByComboBox" Width="200" Margin="10" VerticalAlignment="Top">
            <ComboBoxItem Content="Theo mức độ ưu tiên"/>
            <ComboBoxItem Content="Theo deadline"/>
        </ComboBox>
        <Button Content="Sắp xếp" Width="80" Height="30" HorizontalAlignment="Right" Margin="10" Click="SortButton_Click"/>
    </Grid>
</Window>
